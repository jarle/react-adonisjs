{
  "name": "reference-app",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "license": "MIT",
  "scripts": {
    "start": "node bin/server.js",
    "prebuild": "react-router typegen",
    "build": "node ace build",
    "dev": "node ace serve",
    "test": "node ace test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit"
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#database/*": "./database/*.js",
    "#tests/*": "./tests/*.js",
    "#start/*": "./start/*.js",
    "#config/*": "./config/*.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/eslint-config": "^2.1.2",
    "@adonisjs/prettier-config": "^1.4.0",
    "@adonisjs/tsconfig": "^1.4.1",
    "@japa/assert": "^3.0.0",
    "@japa/file-system": "^2.3.2",
    "@japa/plugin-adonisjs": "^3.0.1",
    "@japa/runner": "^3.1.4",
    "@react-router/dev": "^7.9.1",
    "@react-router/fs-routes": "^7.9.1",
    "@swc/core": "^1.10.7",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.10.6",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "eslint": "^8.57.0",
    "hot-hook": "^0.4.0",
    "playwright": "^1.55.0",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.7",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "@adonisjs/auth": "^9.3.0",
    "@adonisjs/core": "^6.17.1",
    "@adonisjs/lucid": "^21.6.0",
    "@adonisjs/session": "^7.5.0",
    "@adonisjs/shield": "^8.1.1",
    "@adonisjs/static": "^1.1.1",
    "@adonisjs/vite": "^4.0.0",
    "@japa/api-client": "^2.0.4",
    "@japa/browser-client": "^2.1.1",
    "@matstack/react-adonisjs": "workspace:*",
    "@react-router/node": "^7.9.1",
    "@react-router/serve": "^7.9.1",
    "@vinejs/vine": "^3.0.0",
    "edge.js": "^6.2.0",
    "isbot": "^5",
    "luxon": "^3.5.0",
    "pino-pretty": "^13.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.9.1",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7"
  },
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/app"
  },
  "prettier": "@adonisjs/prettier-config",
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middlewares/*.ts"
    ],
    "ignore": [
      "node_modules/**",
      "resources/react_router_app/**",
      "vite.config.ts.timestamp*"
    ]
  }
}